<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.huel.owl.mapper.UserMapper">
  <resultMap id="BaseResultMap" type="cn.edu.huel.owl.po.Users">
    <id column="user_id" jdbcType="INTEGER" property="userId" />
    <result column="username" jdbcType="VARCHAR" property="username" />
    <result column="password" jdbcType="VARCHAR" property="password" />
    <result column="status" jdbcType="VARCHAR" property="status" />
    <result column="classes" jdbcType="VARCHAR" property="classes" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="age" jdbcType="VARCHAR" property="age" />
  </resultMap>
  <select id="getUserList" resultType="cn.edu.huel.owl.po.Users">
    select * from users;
  </select>

  <insert id="registerIn" parameterType="cn.edu.huel.owl.po.Users">
    insert into users (user_id, username, password,
      status, classes,name,age)
    values (#{user_id,jdbcType=INTEGER}, #{username,jdbcType=VARCHAR},#{password,jdbcType=VARCHAR}, #{status,jdbcType=VARCHAR},
      #{classes,jdbcType=VARCHAR}, #{name,jdbcType=VARCHAR},#{age,jdbcType=INTEGER})
  </insert>
  <select id="findUserByUserName" parameterType="java.lang.String" resultType="cn.edu.huel.owl.po.Users">
    select *
    from users
    where username = #{username,jdbcType=VARCHAR}
  </select>
  <select id="loginIn" parameterType="java.lang.String" resultType="cn.edu.huel.owl.po.Users">
    select *
    from users
    where username = #{username,jdbcType=VARCHAR} and password = #{password,jdbcType=VARCHAR}
  </select>



</mapper>